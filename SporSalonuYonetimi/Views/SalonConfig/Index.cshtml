@model SporSalonuYonetimi.Models.SalonConfig

@{
    ViewData["Title"] = "Salon Ayarları";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            @if (TempData["Mesaj"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["Mesaj"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Hata"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fa-solid fa-clock"></i> Çalışma Saatleri Yapılandırması</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Update" method="post"> <input type="hidden" asp-for="Id" />

                        <h6 class="text-primary fw-bold mt-3">Hafta İçi Ayarları</h6>
                        <div class="row mb-3 border-bottom pb-3">
                            <div class="col-md-3">
                                <label class="form-label small text-muted">Sabah Başlangıç</label>
                                <input type="number" asp-for="WeekDayMorningStart" class="form-control" min="0"
                                    max="23" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label small text-muted">Sabah Bitiş</label>
                                <input type="number" asp-for="WeekDayMorningEnd" class="form-control" min="0"
                                    max="23" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label small text-muted">Akşam Başlangıç</label>
                                <input type="number" asp-for="WeekDayEveningStart" class="form-control" min="0"
                                    max="23" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label small text-muted">Akşam Bitiş</label>
                                <input type="number" asp-for="WeekDayEveningEnd" class="form-control" min="0"
                                    max="23" />
                            </div>
                        </div>

                        <h6 class="text-danger fw-bold mt-4">Hafta Sonu (Cmt - Paz) Ayarları</h6>
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label class="form-label small text-muted">Sabah Başlangıç</label>
                                <input type="number" asp-for="WeekendMorningStart" class="form-control" min="0"
                                    max="23" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label small text-muted">Sabah Bitiş</label>
                                <input type="number" asp-for="WeekendMorningEnd" class="form-control" min="0"
                                    max="23" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label small text-muted">Akşam Başlangıç</label>
                                <input type="number" asp-for="WeekendEveningStart" class="form-control" min="0"
                                    max="23" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label small text-muted">Akşam Bitiş</label>
                                <input type="number" asp-for="WeekendEveningEnd" class="form-control" min="0"
                                    max="23" />
                            </div>
                        </div>

                        <div class="form-check form-switch mt-3 p-3 bg-light rounded">
                            <input class="form-check-input" type="checkbox" asp-for="IsSundayOpen" id="sundayCheck">
                            <label class="form-check-label fw-bold" for="sundayCheck">
                                Pazar Günleri Açık Olsun mu?
                            </label>
                            <div class="form-text">İşaretlenirse yukarıdaki hafta sonu saatleri Pazar için de geçerli
                                olur. İşaretlenmezse Pazar kapalı görünür.</div>
                        </div>

                        <button type="submit" class="btn btn-success w-100 mt-4">Ayarları Kaydet</button>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Ana Sayfaya Dön
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}