@model SporSalonuYonetimi.Models.SalonConfig

@{
    ViewData["Title"] = "Salon Ayarları";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
            @if (TempData["Mesaj"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["Mesaj"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Hata"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h4>⚙️ Salon Çalışma Saatleri</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Update" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="alert alert-info text-small">
                            <i class="bi bi-info-circle"></i> Bu ayarlar tüm randevu sistemini etkiler. Antrenörler bu saatler dışında randevu veremez.
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="OpenHour" class="fw-bold mb-1">Salon Açılış Saati (00-23)</label>
                            <input asp-for="OpenHour" type="number" min="0" max="23" class="form-control" />
                            <span asp-validation-for="OpenHour" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CloseHour" class="fw-bold mb-1">Salon Kapanış Saati (00-23)</label>
                            <input asp-for="CloseHour" type="number" min="0" max="23" class="form-control" />
                            <span asp-validation-for="CloseHour" class="text-danger"></span>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input class="form-check-input" type="checkbox" asp-for="IsWeekendOpen" id="weekendSwitch">
                            <label class="form-check-label fw-bold" for="weekendSwitch">Hafta Sonları Salon Açık mı?</label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> Ayarları Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Ana Sayfaya Dön
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}