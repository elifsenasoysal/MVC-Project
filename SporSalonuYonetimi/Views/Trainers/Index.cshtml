@model IEnumerable<SporSalonuYonetimi.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Antrenör Listesi</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Antrenör Ekle
        </a>
    </div>

    <table class="table table-hover table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Ad Soyad</th>
                <th>Uzmanlık</th>
                <th>Çalışma Saatleri</th>
                <th>Verebildiği Dersler</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.FullName</td>
                    
                    <td>@item.Specialization</td>
                    
                    <td>
                        <span class="badge bg-info text-dark">
                            <i class="bi bi-clock"></i> @item.WorkStartHour:00 - @item.WorkEndHour:00
                        </span>
                    </td>

                    <td>
                        @if (item.Services != null && item.Services.Any())
                        {
                            @foreach (var ts in item.Services)
                            {
                                <span class="badge bg-secondary me-1">@ts.ServiceName</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted small">
                                <i class="bi bi-exclamation-circle"></i> Ders atanmamış
                            </span>
                        }
                    </td>

                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.TrainerId" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Details" asp-route-id="@item.TrainerId" class="btn btn-sm btn-info">Detay</a>
                            <a asp-action="Delete" asp-route-id="@item.TrainerId" class="btn btn-sm btn-danger">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>