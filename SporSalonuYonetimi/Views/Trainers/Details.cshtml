@model SporSalonuYonetimi.Models.Trainer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trainer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialization)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialization)
        </dd>
        <dt class="col-sm-2">
            Uzmanlık Alanı
        </dt>
        <dd class="col-sm-10">
            @Model.Specialization
        </dd>

        <dt class="col-sm-2">
            Çalışma Saatleri
        </dt>
        <dd class="col-sm-10">
            @Model.WorkStartHour:00 - @Model.WorkEndHour:00
        </dd>
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TrainerId">Edit</a> |
