@model SporSalonuYonetimi.Models.Trainer

@{
    ViewData["Title"] = "Create";
    // Controller'dan gelen Hizmet Listesi
    var services = ViewBag.Services as List<SporSalonuYonetimi.Models.Service>;
}

<h1>Create</h1>

<h4>Trainer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization" class="control-label"></label>
                <input asp-for="Specialization" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label class="fw-bold d-block mb-2">Verebileceği Dersler:</label>
                <div class="card p-3 bg-light">
                    @if (services != null)
                    {
                        @foreach (var service in services)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="selectedServices"
                                    value="@service.ServiceId" id="service_@service.ServiceId">
                                <label class="form-check-label" for="service_@service.ServiceId">
                                    @service.ServiceName (@service.Price ₺)
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-danger">Önce Hizmet (Service) eklemelisiniz.</p>
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}