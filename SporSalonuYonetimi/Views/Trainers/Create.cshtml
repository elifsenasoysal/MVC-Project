@model SporSalonuYonetimi.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
    var services = ViewBag.Services as List<SporSalonuYonetimi.Models.Service>;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4>➕ Yeni Antrenör Ekle</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create">

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="fw-bold"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Specialization" class="fw-bold"></label>
                            <input asp-for="Specialization" class="form-control" />
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="fw-bold d-block mb-2">
                                Verebileceği Dersler
                            </label>

                            <div class="card p-3 bg-light">
                                @if (services != null)
                                {
                                    <div class="row">
                                        @foreach (var service in services)
                                        {
                                            <div class="col-md-6">
                                                <div class="form-check">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           name="selectedServices"
                                                           value="@service.ServiceId"
                                                           id="service_@service.ServiceId" />
                                                    <label class="form-check-label"
                                                           for="service_@service.ServiceId">
                                                        @service.ServiceName
                                                        <span class="text-muted small">
                                                            (@service.Price ₺)
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-danger mb-0">
                                        Önce Hizmet (Service) eklemelisiniz.
                                    </p>
                                }
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="WorkStartHour" class="fw-bold"></label>
                                <input asp-for="WorkStartHour"
                                       type="number"
                                       min="0"
                                       max="23"
                                       class="form-control" />
                            </div>

                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="WorkEndHour" class="fw-bold"></label>
                                <input asp-for="WorkEndHour"
                                       type="number"
                                       min="0"
                                       max="23"
                                       class="form-control" />
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                Kaydet
                            </button>

                            <a asp-action="Index" class="btn btn-secondary">
                                Listeye Dön
                            </a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
