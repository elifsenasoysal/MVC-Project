@model SporSalonuYonetimi.Models.Trainer

@{
    ViewData["Title"] = "Antrenörü Düzenle";
    // 1. Tüm Hizmetleri alıyoruz
    var allServices = ViewBag.Services as List<SporSalonuYonetimi.Models.Service>;

    // 2. Bu antrenörün ZATEN sahip olduğu hizmetlerin ID'lerini bir listeye alıyoruz (Kontrol için)
    // Model.Services null gelirse hata vermesin diye ?. kullanıyoruz
    var currentTrainerServiceIds = Model.Services?.Select(s => s.ServiceId).ToList() ?? new List<int>();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4>✏️ Antrenörü Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="TrainerId" />

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="control-label fw-bold">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Specialization" class="control-label fw-bold">Uzmanlık Alanı</label>
                            <input asp-for="Specialization" class="form-control" />
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="fw-bold mb-2">Verebileceği Dersler</label>
                            <div class="card p-3">
                                <div class="row">
                                    @foreach (var service in
                                                                        (List<SporSalonuYonetimi.Models.Service>)ViewBag.AllServices)
                                    {
                                        <div class="col-md-6">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="selectedServices"
                                                    value="@service.ServiceId" id="service_@service.ServiceId"
                                                    @if (Model.Services.Any(s => s.ServiceId == service.ServiceId))
                                                    {
                                                        <text>checked</text>
                                                }
                                                />
                                                <label class="form-check-label" for="service_@service.ServiceId">
                                                    @service.ServiceName
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="WorkStartHour" class="control-label fw-bold"></label>
                                <input asp-for="WorkStartHour" type="number" min="0" max="23" class="form-control" />
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="WorkEndHour" class="control-label fw-bold"></label>
                                <input asp-for="WorkEndHour" type="number" min="0" max="23" class="form-control" />
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">Değişiklikleri Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}