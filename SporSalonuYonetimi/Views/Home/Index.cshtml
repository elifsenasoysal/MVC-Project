@model IEnumerable<SporSalonuYonetimi.Models.Service>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-primary">Sağlıklı Yaşama Hoş Geldiniz</h1>
    <p class="lead text-muted">Uzman antrenörlerimizle hedeflerinize ulaşın.</p>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center">
        <h4>⚠️ Görüntülenecek Hizmet Bulunamadı!</h4>
        <p>Veritabanında veri var ama buraya ulaşmıyor olabilir veya liste boştur.</p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Services" asp-action="Create" class="btn btn-dark">Hizmet Ekle</a>
        }
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h4 class="m-0">@item.ServiceName</h4>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h2 class="card-title text-center text-dark my-3">@item.Price ₺</h2>
                        <p class="text-center text-muted flex-grow-1">
                            <i class="bi bi-clock"></i> Süre: @item.DurationMinutes Dakika
                        </p>
                        
                        <div class="d-grid gap-2 mt-3">
                            <a asp-controller="Appointment" asp-action="Create" asp-route-serviceId="@item.ServiceId" 
                               class="btn btn-outline-primary fw-bold">
                                Randevu Al
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}