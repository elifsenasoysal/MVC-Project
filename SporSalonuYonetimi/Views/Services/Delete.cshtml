@model SporSalonuYonetimi.Models.Service

@{
    ViewData["Title"] = "Hizmeti Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4>⚠️ Hizmeti Sil</h4>
                </div>

                <div class="card-body">

                    <p class="text-danger fw-bold mb-3">
                        Bu hizmeti silmek istediğinizden emin misiniz?
                    </p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.ServiceName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ServiceName)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.DurationMinutes)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DurationMinutes) dk
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price) ₺
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ServiceId" />

                        <div class="d-grid gap-2">
                            <input type="submit"
                                   value="Sil"
                                   class="btn btn-danger" />

                            <a asp-action="Index"
                               class="btn btn-secondary">
                                Vazgeç
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
