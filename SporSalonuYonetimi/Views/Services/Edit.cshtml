@model SporSalonuYonetimi.Models.Service

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4>✏️ Hizmeti Düzenle</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="ServiceId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="ServiceName" class="fw-bold">Hizmet Adı</label>
                            <input asp-for="ServiceName" class="form-control" />
                            <span asp-validation-for="ServiceName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DurationMinutes" class="fw-bold">Süre (Dakika)</label>
                            <input asp-for="DurationMinutes" type="number" min="1" class="form-control" />
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price" class="fw-bold">Ücret (₺)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning">
                                Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                Listeye Dön
                            </a>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
