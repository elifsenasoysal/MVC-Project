@model IEnumerable<SporSalonuYonetimi.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Hizmet Listesi</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
        </a>
    </div>

    <table class="table table-hover table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Hizmet Adı</th>
                <th>Süre</th>
                <th>Ücret</th>
                <th>İşlemler</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">
                        <i class="bi bi-activity text-danger"></i> @item.ServiceName
                    </td>

                    <td>
                        <span class="badge bg-info text-dark">
                            <i class="bi bi-clock"></i> @item.DurationMinutes dk
                        </span>
                    </td>

                    <td>
                        <span class="badge bg-success">
                            <i class="bi bi-currency-lira"></i> @item.Price
                        </span>
                    </td>

                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit"
                               asp-route-id="@item.ServiceId"
                               class="btn btn-sm btn-warning">
                                Düzenle
                            </a>

                            <a asp-action="Details"
                               asp-route-id="@item.ServiceId"
                               class="btn btn-sm btn-info">
                                Detay
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@item.ServiceId"
                               class="btn btn-sm btn-danger">
                                Sil
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
